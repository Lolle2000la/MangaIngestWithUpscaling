{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Bundle all NetVips updates",
      "matchPackageNames": ["NetVips*"],
      "automerge": true
    },
    {
      "description": "Bundle all ReactiveUI updates",
      "matchPackageNames": ["ReactiveUI", "ReactiveUI.Blazor", "ReactiveUI*"],
      "automerge": true
    },
    {
      "description": "Bundle all MudBlazor updates",
      "matchPackageNames": ["MudBlazor*"],
      "automerge": true
    },
    {
      "description": "Bundle all EFCore updates",
      "matchPackageNames": ["Microsoft.EntityFrameworkCore*"],
      "automerge": true
    },
    {
      "description": "Bundle all ASP.NET Core updates",
      "matchPackageNames": ["Microsoft.AspNetCore*"],
      "automerge": true
    },
    {
      "description": "Bundle all Serilog updates",
      "matchPackageNames": ["Serilog*"],
      "automerge": true
    },
    {
      "description": "Automerge all updates if they build",
      "matchPackageNames": ["*"],
      "automerge": true
    }
  ]
}
