@using MangaIngestWithUpscaling.Data.LibraryManagement
@using MangaIngestWithUpscaling.Shared.Data.LibraryManagement

@page "/libraries/create"

@inject ApplicationDbContext DbContext
@inject NavigationManager NavigationManager
@inject IStringLocalizer<CreateLibrary> Loc

<PageTitle>@Loc["PageTitle"]</PageTitle>

<MudCard>
    <MudCardHeader>
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <a href="libraries">
                <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" />
            </a>
            <MudText Typo="Typo.h5">@Loc["Header"]</MudText>
        </MudStack>
    </MudCardHeader>
    <MudCardContent>
        <EditLibraryForm @bind-Library="Library" @bind-IsValid="IsValid" />
    </MudCardContent>
    <MudCardActions>
        <MudSpacer />
        <MudButton StartIcon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Primary"
            Disabled="!IsValid" OnClick="OnCreateLibrary">@Loc["CreateButton"]</MudButton>
    </MudCardActions>
</MudCard>


@code {
    private Library Library { get; set; } = new Library()
    {
        Name = ""
    };

    public bool IsValid { get; set; } = false;

    private async Task OnCreateLibrary()
    {
        DbContext.Libraries.Add(Library);
        await DbContext.SaveChangesAsync();
        NavigationManager.NavigateTo("/libraries");
    }
}