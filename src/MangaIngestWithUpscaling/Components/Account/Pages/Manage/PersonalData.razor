@page "/Account/Manage/PersonalData"

@using Microsoft.Extensions.Localization

@inject IdentityUserAccessor UserAccessor
@inject IStringLocalizer<PersonalData> Loc
@inject IStringLocalizer<SharedResource> SharedLoc

<PageTitle>@Loc["PageTitle"]</PageTitle>

<StatusMessage />
<h3>@Loc["Header"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@Loc["Description"]</p>
        <p>
            <strong>@Loc["Warning"]</strong>
        </p>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button class="btn btn-primary" type="submit">@Loc["Download"]</button>
        </form>
        <p>
            <a href="Account/Manage/DeletePersonalData" class="btn btn-danger">@SharedLoc["Delete"]</a>
        </p>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }
}