@using MangaIngestWithUpscaling.Data.LibraryManagement
@using MangaIngestWithUpscaling.Shared.Data.LibraryManagement
@using MangaIngestWithUpscaling.Services.ChapterManagement
@using Microsoft.Extensions.Localization
@inject ApplicationDbContext DbContext
@inject IChapterDeletion DeletionService
@inject IStringLocalizer<DeleteMangasDialog> Loc

<MudDialog>
    <DialogContent>
        <MudStack>
            <MudText>@(Mangas.Count > 1 ? string.Format(Loc["Title_Multiple"], Mangas.Count) :
                                string.Format(Loc["Title_Single"], Mangas.First().PrimaryTitle))</MudText>

            <MudCheckBox T="bool" Label="@Loc["Option_Original"]" @bind-Value="DeleteOriginalFiles" />
            <MudCheckBox T="bool" Label="@Loc["Option_Upscaled"]" @bind-Value="DeleteUpscaledFiles" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@Loc["Button_Cancel"]</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.DeleteForever" Color="Color.Error" Variant="Variant.Filled"
            OnClick="Submit">@Loc["Button_Delete"]</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public required IReadOnlyCollection<Manga> Mangas { get; set; }

    private bool DeleteOriginalFiles { get; set; }
    private bool DeleteUpscaledFiles { get; set; }

    private async Task Submit()
    {
        foreach (var manga in Mangas)
        {
            DeletionService.DeleteManga(manga, DeleteOriginalFiles, DeleteUpscaledFiles);
        }

        await DbContext.SaveChangesAsync();

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}