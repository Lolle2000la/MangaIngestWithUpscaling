@using MangaIngestWithUpscaling.Data.LibraryManagement
@using MangaIngestWithUpscaling.Shared.Data.LibraryManagement
@using MangaIngestWithUpscaling.Services.ChapterManagement
@using Microsoft.Extensions.Localization
@inject ApplicationDbContext DbContext
@inject IChapterDeletion DeletionService
@inject IStringLocalizer<SharedResource> Loc

<MudDialog>
    <DialogContent>
        <MudStack>
            <MudText>@string.Format(Loc["DeleteChaptersDialog_Title"], Chapters.Count)</MudText>

            <MudCheckBox T="bool" Label="@Loc["DeleteChaptersDialog_Option_Original"]"
                @bind-Value="DeleteOriginalFiles" />
            <MudCheckBox T="bool" Label="@Loc["DeleteChaptersDialog_Option_Upscaled"]"
                @bind-Value="DeleteUpscaledFiles" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@Loc["Generic_Cancel"]</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.DeleteForever" Color="Color.Error" Variant="Variant.Filled"
            OnClick="Submit">@Loc["Generic_Delete"]</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public required IReadOnlyCollection<Chapter> Chapters { get; set; }

    private bool DeleteOriginalFiles { get; set; }
    private bool DeleteUpscaledFiles { get; set; }

    private async Task Submit()
    {
        foreach (var chapter in Chapters)
        {
            DeletionService.DeleteChapter(chapter, DeleteOriginalFiles, DeleteUpscaledFiles);
        }

        await DbContext.SaveChangesAsync();

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}