  //       "Quality": 98  // High quality to preserve image fidelity
  //     },
  //     {
  //       "FromFormat": ".webp",
  //       "ToFormat": ".png"
  //     }
  //   ]
  // },
  "OIDC": {
    "Enabled": false,
    "MetadataAddress": "YOUR_DISCOVERY_DOCUMENT_URL",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET"
    // remember to add https://<your-app-base-url>/signin-oidc as a valid redirect URI in your OIDC provider
  },
  "IntegrityChecker": {
    "MaxParallelism": 8,
    "FixImageExtensions": false // Set to true to automatically fix image file extensions based on their headers during integrity checks
  }
}