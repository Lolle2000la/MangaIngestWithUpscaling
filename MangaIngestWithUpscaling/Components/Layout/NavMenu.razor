@implements IDisposable

@inject NavigationManager NavigationManager


<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All">
        <MudIcon Icon="bi bi-house-door-fill-nav-menu" /> Home
    </MudNavLink>
    <MudNavLink Href="counter">
        <MudIcon Icon="bi bi-plus-square-fill-nav-menu" /> Counter
    </MudNavLink>
    <MudNavLink Href="weather">
        <MudIcon Icon="bi bi-list-nested-nav-menu" /> Weather
    </MudNavLink>
    <MudNavLink Href="auth">
        <MudIcon Icon="bi bi-lock-nav-menu" /> Auth Required
    </MudNavLink>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="Account/Manage">
                <MudIcon Icon="bi bi-person-fill-nav-menu" /> @context.User.Identity?.Name
            </MudNavLink>
            <MudNavLink Href="Account/Logout" OnClick="Logout">
                <MudIcon Icon="bi bi-arrow-bar-left-nav-menu" /> Logout
            </MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="Account/Register">
                <MudIcon Icon="bi bi-person-nav-menu" /> Register
            </MudNavLink>
            <MudNavLink Href="Account/Login">
                <MudIcon Icon="bi bi-person-badge-nav-menu" /> Login
            </MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void Logout()
    {
        NavigationManager.NavigateTo("Account/Logout", true);
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}