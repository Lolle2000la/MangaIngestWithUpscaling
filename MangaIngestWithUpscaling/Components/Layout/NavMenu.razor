@implements IDisposable

@inject NavigationManager NavigationManager


<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All">
        <MudIcon Icon="bi bi-house-door-fill-nav-menu" /> <span>Home</span>
    </MudNavLink>
    <MudNavLink Href="libraries">
        <MudIcon Icon="@Icons.Material.Filled.LibraryBooks" /> <span>Libraries</span>
    </MudNavLink>
    <MudNavLink Href="tasks">
        <MudIcon Icon="@Icons.Material.Filled.Task" /> <span>Tasks</span>
    </MudNavLink>
    <MudNavLink Href="counter">
        <MudIcon Icon="@Icons.Material.Filled.AccountBalanceWallet" /> <span>Counter</span>
    </MudNavLink>
    <MudNavLink Href="weather">
        <MudIcon Icon="bi bi-list-nested-nav-menu" /> <span>Weather</span>
    </MudNavLink>
    <MudNavLink Href="TestChapterRecognition">
        <MudIcon Icon="@Icons.Material.Filled.ImageSearch" /><span>TestChapterRecognition</span>
    </MudNavLink>
    <MudNavLink Href="auth">
        <MudIcon Icon="bi bi-lock-nav-menu" /> <span>Auth Required</span>
    </MudNavLink>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="Account/Manage">
                <MudIcon Icon="@Icons.Material.Filled.ManageAccounts" /><span>@context.User.Identity?.Name</span>
            </MudNavLink>
            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                <button type="submit" class="mud-nav-link mud-ripple">
                    <div class="mud-nav-link-text">
                        <MudIcon Icon="@Icons.Material.Filled.Logout" /> Logout
                    </div>
                </button
            </form>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="Account/Register">
                <MudIcon Icon="bi bi-person-nav-menu" /><span>Register</span>
            </MudNavLink>
            <MudNavLink Href="Account/Login">
                <MudIcon Icon="@Icons.Material.Filled.Login" /><span>Login</span>
            </MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void Logout()
    {
        NavigationManager.NavigateTo("Account/Logout", true);
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}