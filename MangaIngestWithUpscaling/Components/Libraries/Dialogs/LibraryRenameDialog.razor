@using MangaIngestWithUpscaling.Data.LibraryManagement
@using MangaIngestWithUpscaling.Components.Libraries.Filters
@using MangaIngestWithUpscaling.Components.Libraries
@inject ApplicationDbContext DbContext

@implements IDisposable

<MudDialog>
    <TitleContent>Edit & Preview Rename Rules</TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12" lg="6">
                <EditLibraryRenames Library="@Library" RulesChanged="OnRulesChanged" />
            </MudItem>
            <MudItem xs="12" lg="6">
                <PreviewLibraryRenames @ref="_previewLibraryRenamesComponent" Library="@Library" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter, EditorRequired] public required Library Library { get; set; }
    
    private PreviewLibraryRenames? _previewLibraryRenamesComponent;
    private bool _chaptersLoaded = false;
    private CancellationTokenSource? lastPreviewGeneration;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_chaptersLoaded)
        {
            await LoadChaptersAsync();
            _chaptersLoaded = true;
            // Ensure preview is updated after chapters are loaded
            await OnRulesChanged(); 
        }
    }

    private async Task LoadChaptersAsync(CancellationToken token = default)
    {
        if (Library?.MangaSeries != null)
        {
            await foreach (var series in Library.MangaSeries.ToAsyncEnumerable().WithCancellation(token))
            {
                var entry = DbContext.Entry(series);
                if (!entry.Collection(s => s.Chapters).IsLoaded)
                {
                    await entry.Collection(s => s.Chapters).LoadAsync(token);
                }
            }
        }
    }

    private async Task OnRulesChanged()
    {
        if (_previewLibraryRenamesComponent != null)
        {
            if (lastPreviewGeneration != null)
            {
                await lastPreviewGeneration.CancelAsync();
            }
            lastPreviewGeneration = new CancellationTokenSource();
            
            // If chapters haven't been loaded yet, load them first.
            // This might happen if rules are changed very quickly before initial chapter load completes.
            if (!_chaptersLoaded) 
            {
                await LoadChaptersAsync(lastPreviewGeneration.Token);
                _chaptersLoaded = true;
            }
            await _previewLibraryRenamesComponent.RefreshPreviewsAsync(lastPreviewGeneration.Token);
        }
    }
    void Close() => MudDialog.Close();

    public void Dispose()
    {
        if (lastPreviewGeneration?.IsCancellationRequested == false)
        {
            lastPreviewGeneration?.Cancel();
        }
        
        lastPreviewGeneration?.Dispose();
        DbContext?.Dispose();
    }

}
