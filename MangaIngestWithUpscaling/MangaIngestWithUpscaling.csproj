<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UserSecretsId>aspnet-manga-ingest-with-upscaling-5fab364d-e1fd-422f-aae1-1a2afc91f4cf</UserSecretsId>
        <RootNamespace>MangaIngestWithUpscaling</RootNamespace>
        <AssemblyName>$(AssemblyName.Replace(' ', '_'))</AssemblyName>
        <!-- Disable nullable attribute warnings on generated code due to tooling bugs -->
        <!-- see https://github.com/dotnet/razor/issues/7286 for more details -->
        <NoWarn>$(NoWarn);NETSDK1206;CS8669</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <BlazorWebAssemblyLoadAllGlobalizationData>true</BlazorWebAssemblyLoadAllGlobalizationData>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <DockerComposeProjectPath>..\docker-compose.dcproj</DockerComposeProjectPath>
    </PropertyGroup>

    <ItemGroup>
        <Protobuf Include="protos\upscaling-dist.proto" GrpcServices="Server"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AutoRegisterInject" Version="1.4.1"/>
        <PackageReference Include="DynamicData" Version="9.4.1"/>
        <PackageReference Include="Grpc.AspNetCore" Version="2.71.0"/>
        <PackageReference Include="Microsoft.AspNetCore.DataProtection.EntityFrameworkCore" Version="9.0.9"/>
        <PackageReference Include="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="9.0.9"/>
        <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="9.0.9"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.9"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="9.0.9"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="9.0.9"/>
        <PackageReference Include="Microsoft.Extensions.Http.Resilience" Version="9.9.0"/>
        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.22.1"/>
        <PackageReference Include="Mono.Posix.NETStandard" Version="1.0.0"/>
        <PackageReference Include="MudBlazor" Version="8.12.0"/>
        <PackageReference Include="MudBlazor.Translations" Version="2.6.0"/>
        <PackageReference Include="Open.ChannelExtensions" Version="9.1.0"/>
        <PackageReference Include="PinguApps.Blazor.QRCode" Version="1.1.4"/>
        <PackageReference Include="ReactiveUI" Version="21.0.1"/>
        <PackageReference Include="ReactiveUI.Blazor" Version="21.0.1"/>
        <PackageReference Include="ReactiveMarbles.ObservableEvents.SourceGenerator" Version="1.3.1" PrivateAssets="all"/>
        <PackageReference Include="Serilog.AspNetCore" Version="9.0.0"/>
        <PackageReference Include="Serilog.Settings.Configuration" Version="9.0.0"/>
        <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0"/>
        <PackageReference Include="Serilog.Sinks.SQLite" Version="6.0.0"/>
        <PackageReference Include="NetVips" Version="3.1.0"/>

        <!-- Platform-specific NetVips native libraries -->
        <PackageReference Include="NetVips.Native.win-x64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'win-x64'"/>
        <PackageReference Include="NetVips.Native.win-x86" Version="8.17.1" Condition="'$(RuntimeIdentifier)' == 'win-x86'"/>
        <PackageReference Include="NetVips.Native.win-arm64" Version="8.17.1" Condition="'$(RuntimeIdentifier)' == 'win-arm64'"/>
        <PackageReference Include="NetVips.Native.linux-x64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'linux-x64'"/>
        <PackageReference Include="NetVips.Native.linux-arm" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'linux-arm'"/>
        <PackageReference Include="NetVips.Native.linux-arm64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'linux-arm64'"/>
        <PackageReference Include="NetVips.Native.linux-musl-x64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'linux-musl-x64'"/>
        <PackageReference Include="NetVips.Native.linux-musl-arm64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'linux-musl-arm64'"/>
        <PackageReference Include="NetVips.Native.osx-x64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'osx-x64'"/>
        <PackageReference Include="NetVips.Native.osx-arm64" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == 'osx-arm64'"/>

        <!-- Fallback for AnyCPU builds - includes all platforms -->
        <PackageReference Include="NetVips.Native" Version="8.17.2" Condition="'$(RuntimeIdentifier)' == '' OR '$(RuntimeIdentifier)' == 'any'"/>
        <PackageReference Include="System.Interactive.Async" Version="6.0.3"/>
        <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="9.0.9"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="../MangaJaNaiConverterGui/MangaJaNaiConverterGui/backend/**">
            <Link>backend\%(RecursiveDir)%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Include="appstate2.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\MangaIngestWithUpscaling.Shared\MangaIngestWithUpscaling.Shared.csproj"/>
    </ItemGroup>

</Project>
